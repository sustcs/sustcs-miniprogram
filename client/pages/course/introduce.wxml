<navigationBar bgColor="bg-gradual-orange" isBack="{{true}}">
    <view slot="backText"></view>
    <view slot="content">Course</view>
</navigationBar>
<scroll-view scroll-x class="bg-white nav flex text-center" scroll-with-animation scroll-left="{{scrollLeft}}">
    <view class="cu-item flex-sub {{index==TabCur?'text-green cur':''}}" wx:for="{{allItem}}" wx:key bindtap='tabSelect' data-id="{{index}}">
        {{item.name}}
    </view>
</scroll-view>
<view class='margin-xl bg-white padding-xl radius shadow-lg'>
    <view class='text-content'>
        <view>this is content</view>
    </view>
</view>
<view class="cu-list menu sm-border ">
    <navigator class="cu-item arrow" url="review" hover-class="navigator-hover">
        <view class='content'>
            <text class='icon-comment text-orange'></text>
            <text class='text-grey'>comments</text>
        </view>
        <view class='action'>
            <view class="cu-avatar-group">
                <view class="cu-avatar round sm" style="background-image:url(https://image.weilanwl.com/img/square-4.jpg);"></view>
                <view class="cu-avatar round sm" style="background-image:url(https://image.weilanwl.com/img/square-3.jpg);"></view>
                <view class="cu-avatar round sm" style="background-image:url(https://image.weilanwl.com/img/square-2.jpg);"></view>
                <view class="cu-avatar round sm" style="background-image:url(https://image.weilanwl.com/img/square-1.jpg);"></view>
            </view>
            <text class='text-grey text-sm'>4 people</text>
        </view>
    </navigator>
    <navigator class="cu-item arrow" url="../source/tree" hover-class="navigator-hover">
        <view class='content'>
            <text class='icon-file text-grey'></text>
            <text class='text-grey'>Cloud disk</text>
        </view>
    </navigator>
</view>